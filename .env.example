# =============================================================================
# MAILER API ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3002)
PORT=3002

# Environment mode: development or production (default: development)
GO_ENV=development

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Enable REST API endpoints (default: true)
ENABLE_REST_API=true

# Enable RabbitMQ consumer for email queue (default: true)
ENABLE_RABBITMQ_CONSUMER=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL host address
DB_HOST=localhost

# PostgreSQL port (default: 5432)
DB_PORT=5432

# PostgreSQL username
DB_USER=root

# PostgreSQL password
DB_PASS=root

# PostgreSQL database name (default: auth)
DB_NAME=mailer

# =============================================================================
# SMTP CONFIGURATION
# =============================================================================

# SMTP server hostname
SMTP_HOST=smtp.domain.com

# SMTP server port (default: 587)
SMTP_PORT=587

# SMTP username/email
SMTP_USERNAME=no-reply@domain.com

# SMTP password
SMTP_PASSWORD=your-smtp-password

# SMTP from name/email
SMTP_FROM=Company

# =============================================================================
# RABBITMQ CONFIGURATION (Optional - for email queue)
# =============================================================================

# RabbitMQ host (default: localhost)
RABBITMQ_HOST=localhost

# RabbitMQ port (default: 5672)
RABBITMQ_PORT=5672

# RabbitMQ username (default: guest)
RABBITMQ_USERNAME=guest

# RabbitMQ password (default: guest)
RABBITMQ_PASSWORD=guest

# RabbitMQ virtual host (default: /)
RABBITMQ_VHOST=/